include README.md
include LICENSE
include pybcsv/py.typed

# Include top-level headers bundled for distribution
recursive-include include *.h
recursive-include include *.hpp
recursive-include include *.c
recursive-include include/boost-1.89.0 *

# Only include C/C++ sources from the python package that are intentionally
# shipped (bindings.cpp) - avoid globbing for headers under pybcsv which
# previously produced warnings.
include pybcsv/bindings.cpp

recursive-exclude tests *
recursive-exclude examples *
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store